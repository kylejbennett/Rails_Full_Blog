
<h1 class="title">
	<%= @post.title %>
</h1>

<p class="date">
	Submitted <%= time_ago_in_words(@post.created_at) %> Ago by <%= link_to User.find(@post.user_id).username, user_path(User.find(@post.user_id)) %>
	<% if current_user == User.find(@post.user_id) %>
		| <%= link_to 'Edit', edit_post_path(@post) %>
		| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?'} %>
	<% end %>
</p>

<p class="body">
	<%= @post.body %>
</p>

<div id="comments">
	<h2>
		<%= @post.comments.count %>
		<% if @post.comments.count == 1 %>
			<%= "Comment:" %>
		<% else %>
			<%= "Comments:" %> 
		<% end %>
	</h2>
	<%= render @post.comments %>
	

	<h3>Add a comment: </h3>
	<%= render "comments/form" %>
</div>