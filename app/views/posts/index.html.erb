<div class="feed">

	<%= inject_h1("Post Feed Page")%>

	<% @posts.each do |post|%>
		<div>
			<hr>
			<h2>
				<%= link_to post.title, post %><br>
			</h2>
			<p>
				"<%= post.body%>"<br>	
			</p>
			<br>
			<h4>
				Posted by 
				<%= link_to User.find(post.user_id).username, user_path(User.find(post.user_id)) %> - <%= time_ago_in_words(post.created_at) %> 
				ago
			</h4>
			<%=link_to "Delete", post_path(post), method: :delete, remote: true, class: "delete-post" %>	
		</div>
	<% end %>
</div>

